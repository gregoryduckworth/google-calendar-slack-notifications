{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "lib",
    "paths": {
      "@src/*": ["src/*"]
    },
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es5"
  },
  "exclude": ["node_modules/**/*", ".serverless/**/*", ".webpack/**/*"],
  "include": ["./**/*.ts"]
}
